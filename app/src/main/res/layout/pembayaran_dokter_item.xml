<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/logo_Bank"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingBottom="5dp"
        android:layout_margin="10dp"
        android:src="@drawable/lingkaran"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nama_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Bank"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/logo_Bank"
        app:layout_constraintTop_toTopOf="@id/logo_Bank"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"/>

    <ImageView
        android:id="@+id/logo_ceklis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ceklis_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/logo_Bank"
        android:layout_marginEnd="25dp"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>