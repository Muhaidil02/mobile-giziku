<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/bgAbu"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/background_abu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/vector_suntik"
        app:layout_constraintStart_toStartOf="@+id/bgAbu"
        app:layout_constraintTop_toTopOf="@+id/bgAbu" />

    <TextView
        android:id="@+id/namaVaksin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hepatitis B"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imageView15"
        app:layout_constraintTop_toTopOf="@+id/imageView15"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/hargaVaksin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp. 1.350.000"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/namaVaksin"
        app:layout_constraintStart_toStartOf="@id/namaVaksin"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tambahvaksin"
        app:layout_constraintBottom_toBottomOf="@+id/bgAbu"
        app:layout_constraintEnd_toEndOf="@+id/bgAbu"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>