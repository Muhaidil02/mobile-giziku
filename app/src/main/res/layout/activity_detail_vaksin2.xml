<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".vaksin.DetailVaksin">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:fontFamily="@font/ari"
        android:padding="15dp"
        android:drawableLeft="@drawable/baseline_chevron_left_24"
        android:text="Rincian Biaya Vaksin"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/garis_full"
        app:layout_constraintTop_toBottomOf="@id/textView1" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="Rincian Vaksin"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView17" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/background_abu_tanpagaris"
        app:layout_constraintStart_toStartOf="@id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/tempatVaksinDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prodia Taeng Vaksinasi"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/logo_rumah_sakit"
        android:drawablePadding="15dp"
        app:layout_constraintStart_toStartOf="@+id/imageView18"
        app:layout_constraintTop_toTopOf="@+id/imageView18"
        android:textSize="12sp"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/jenisVaksinDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/vector_suntik_hitam"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:text="Prodia Taeng Vaksinasi"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tempatVaksinDetail"
        app:layout_constraintTop_toBottomOf="@+id/tempatVaksinDetail" />

    <TextView
        android:id="@+id/jadwalVaksinDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_calendar_today_24"
        android:layout_marginTop="8dp"
        android:drawablePadding="15dp"
        android:text="Kamis, 18 Apr 2024"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tempatVaksinDetail"
        app:layout_constraintTop_toBottomOf="@+id/jenisVaksinDetail" />

    <TextView
        android:id="@+id/waktuVaksinDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pagi-Siang (08.00-11.00)"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="@+id/jadwalVaksinDetail"
        app:layout_constraintTop_toBottomOf="@+id/jadwalVaksinDetail" />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Rincian Biaya"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@id/garis" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/background_abu_tanpagaris"
        app:layout_constraintStart_toStartOf="@id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />


    <TextView
        android:id="@+id/jenisVaksinndetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1x Hepatitis B"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="@+id/imageView19" />

    <TextView
        android:id="@+id/hargaVaksinDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp. 1.350.000"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@+id/jenisVaksinndetail" />

    <TextView
        android:id="@+id/textBiayaLayanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biaya Layanan"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/jenisVaksinndetail" />

    <TextView
        android:id="@+id/hargaBiayaLayanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="Rp.0"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/hargaVaksinDetail"
        app:layout_constraintTop_toTopOf="@+id/textBiayaLayanan" />

    <TextView
        android:id="@+id/textTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/textBiayaLayanan" />

    <TextView
        android:id="@+id/totalHargaDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="Rp.1.350.000"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/hargaBiayaLayanan"
        app:layout_constraintTop_toTopOf="@+id/textTotal" />

    <ImageView
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/garis_full"
        app:layout_constraintTop_toBottomOf="@id/imageView18"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:src="@drawable/garis_full"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="130dp" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="50dp"
        android:text="Total"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnLanjut" />

    <TextView
        android:id="@+id/totalHargaDetaill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp.1.360.000"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btnLanjut"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />


    <Button
        android:id="@+id/btnLanjut"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/background_btn_coklat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="25dp"
        android:text="Lanjut"
        android:textColor="@color/white"
        style="@android:style/Widget.Button"/>


</androidx.constraintlayout.widget.ConstraintLayout>