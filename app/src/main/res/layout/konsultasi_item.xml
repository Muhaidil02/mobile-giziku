<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageKonsultasi"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:src="@drawable/gambarpink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <TextView
        android:id="@+id/namaKonsultasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ini Nama Dokter"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/imageKonsultasi"
        app:layout_constraintTop_toTopOf="@id/imageKonsultasi"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/pengalamanKonsultasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengalaman Organisasi"
        android:textSize="12sp"
        android:textColor="@color/hitamburam"
        app:layout_constraintTop_toBottomOf="@id/namaKonsultasi"
        app:layout_constraintStart_toStartOf="@id/namaKonsultasi"/>

    <TextView
        android:id="@+id/jarakKonsultasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15.7 km"
        android:textColor="@color/hitamburam"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/pengalamanKonsultasi"
        app:layout_constraintStart_toStartOf="@id/pengalamanKonsultasi"/>

    <TextView
        android:id="@+id/hargaKonsultasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ini Harga Konsultasi"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jarakKonsultasi"
        android:layout_marginEnd="40dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/garis"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/imageKonsultasi"
        android:layout_marginBottom="3dp"/>

    

</androidx.constraintlayout.widget.ConstraintLayout>