<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profil"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_chevron_left_24"
        android:text="Tambah Profil Anak"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="15dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/garis_full"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Anak"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/background_abu"
                android:padding="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextTglLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/background_abu"
                android:hint="Tanggal Lahir (dd/mm/yyyy)"
                android:padding="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berat Badan"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextBerat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/background_abu"
                android:hint="Berat Badan (kg)"
                android:padding="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tinggi Badan"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextTinggi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:hint="Tinggi Badan (cm)"
                android:background="@drawable/background_abu"
                android:padding="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lingkar Kepala"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextLingkarKepala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/background_abu"
                android:hint="Lingkar Kepala (cm)"
                android:padding="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin:"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginTop="10dp"/>

            <RadioGroup
                android:id="@+id/radioGroupAlergi"
                android:layout_width="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonLakiLaki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laki-laki"
                    android:checked="true"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/radioButtonPerempuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mempunyai Alergi :"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginTop="10dp"/>

            <RadioGroup
                android:id="@+id/radioGroupALergi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radiobtnAlergiYa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iya"
                    android:checked="true"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/radiobtnAlergiTidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tidak"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

            </RadioGroup>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnTambahProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Profil"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/background_btn_login"
                android:textColor="@color/primary"
                android:textSize="16sp"
                style="@android:style/Widget.Button"
                android:layout_margin="16dp"/>

                <ProgressBar
                    android:id="@+id/progresBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/btnTambahProfil"
                    app:layout_constraintEnd_toEndOf="@id/btnTambahProfil"
                    app:layout_constraintStart_toStartOf="@id/btnTambahProfil"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

    </ScrollView>


</LinearLayout>
