<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editProifl"
    tools:context=".EditProfilActivity"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_chevron_left_24"
        android:text="Edit Profil"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="15dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/garis_full"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Username"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/background_abu"
                android:padding="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editPasswordBaru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:inputType="textPassword"
                android:layout_marginEnd="15dp"
                android:background="@drawable/background_abu"
                android:hint="Masukkan Password Baru"
                android:padding="16dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konfirmasi Password Baru"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editKonfirmasiPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:inputType="textPassword"
                android:layout_marginEnd="15dp"
                android:hint="Konfirmasi Password"
                android:background="@drawable/background_abu"
                android:padding="16dp"/>

            <Button
                android:id="@+id/btnEditProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profil"
                android:background="@drawable/background_btn_login"
                android:textColor="@color/primary"
                android:textSize="16sp"
                style="@android:style/Widget.Button"
                android:layout_margin="16dp"/>

            <ProgressBar
                android:id="@+id/progresBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
