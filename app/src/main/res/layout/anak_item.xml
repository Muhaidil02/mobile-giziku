<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"

    android:background="@drawable/item_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="190dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_abu"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="5dp" />

    <ImageView
        android:id="@+id/pink"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:background="@drawable/background_btn_login1"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@id/imageView13" />

    <TextView

        android:id="@+id/namaAnak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/pink"
        app:layout_constraintEnd_toEndOf="@+id/pink"
        app:layout_constraintStart_toStartOf="@+id/pink"
        app:layout_constraintTop_toTopOf="@+id/pink" />


    <TextView
        android:id="@+id/titleberatAnak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Berat          : "
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@id/imageView13"
        app:layout_constraintTop_toBottomOf="@id/pink" />

    <TextView
        android:id="@+id/beratAnak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
        android:fontFamily="sans-serif"
        android:text=""
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@id/titleberatAnak"

        app:layout_constraintTop_toTopOf="@+id/titleberatAnak" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif"
        android:text=" kg"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@id/beratAnak"
        app:layout_constraintTop_toTopOf="@id/beratAnak" />

    <TextView
        android:id="@+id/titletinggiAnak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Tinggi        : "
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@+id/titleberatAnak"
        app:layout_constraintTop_toBottomOf="@id/titleberatAnak" />

    <TextView
        android:id="@+id/tinggiAnak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text=""
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="13dp"
      app:layout_constraintStart_toEndOf="@id/titletinggiAnak"
        app:layout_constraintTop_toTopOf="@id/titletinggiAnak" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text=" cm"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@id/tinggiAnak"
        app:layout_constraintTop_toTopOf="@id/tinggiAnak" />


    <TextView
        android:id="@+id/titlelingkarAnak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Lingkar Kepala : "
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@+id/titletinggiAnak"
        app:layout_constraintTop_toBottomOf="@id/titletinggiAnak" />

    <TextView
        android:id="@+id/lingkarAnak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text=""
        android:textColor="@color/black"
        android:textSize="13dp"
         android:layout_marginStart="10dp"
       app:layout_constraintStart_toEndOf="@id/titlelingkarAnak"
        app:layout_constraintTop_toTopOf="@id/titlelingkarAnak" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="sans-serif"
        android:text=" cm"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@id/lingkarAnak"
        app:layout_constraintTop_toTopOf="@id/lingkarAnak" />

</androidx.constraintlayout.widget.ConstraintLayout>