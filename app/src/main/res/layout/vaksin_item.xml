<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_selector">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageitemVaksin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:src="@drawable/gambarpink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textTempatVaksin"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Judul Tempat Vaksinasi"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="125dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textLokasiVaksin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi vaksin -"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_marginStart="125dp"/>
            <TextView
                android:id="@+id/textJarakLokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100km -"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_marginStart="2dp"/>
            <TextView
                android:id="@+id/textRatingVaksin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:drawablePadding="2dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/baseline_star_24"
                android:textSize="12dp"
                android:layout_marginStart="2dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ceklisbiruvaksin"
            android:layout_marginStart="125dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>