<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/abumuda"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textItemMenu"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ari"
            android:text="Tumis Kacang Panjang Tempe"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/gambarItemMenu"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:src="@drawable/asupanibu_sayur"
          android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/cardView"
            app:layout_constraintTop_toTopOf="@id/cardView"/>


        <TextView
            android:id="@+id/keteranganItem"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_jam"
            android:drawablePadding="10dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="40dp"
            android:text="20 menit : Resep Makanan Ibu Hamil, Makan Siang, Makan Malam"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tanggalItemMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="190dp"
            android:text="11 Maret 2024"
            android:textSize="10dp" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>