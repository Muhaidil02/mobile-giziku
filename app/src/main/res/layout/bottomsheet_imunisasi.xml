<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="13dp"
    android:background="@drawable/sheet_bg">

    <TextView
        android:id="@+id/textviewDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Edit Status Imunisasi"
        android:fontFamily="@font/ari"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/garis_full"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/textviewDetail" />
    <TextView
        android:id="@+id/textBelum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum"
       app:layout_constraintTop_toBottomOf="@id/garis"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textSudah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah"
        app:layout_constraintTop_toBottomOf="@id/textBelum"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"/>


    <RadioGroup
        android:id="@+id/radioGroupStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/garis"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radioButtonSudah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingStart="8dp" />

        <RadioButton
            android:id="@+id/radioButtonBelum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:gravity="center_vertical"
            android:paddingStart="8dp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnSimpanStatus"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_btn_login1"
        android:text="Simpan"
        android:textColor="@color/white"
        style="@android:style/Widget.Button"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroupStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
